{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "moduleResolution": "node",
        "declaration": false,
        "noLib": false,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [ "node_modules/@types", "./typings.d.ts" ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}